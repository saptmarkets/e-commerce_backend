# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/saptmarkets?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_SECRET_FOR_VERIFY=your_verify_secret_key_here_make_it_different_from_jwt_secret

# Server Configuration
NODE_ENV=production
PORT=5055

# Cloudinary Configuration (Image Storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@saptmarkets.com

# SMS Configuration (1s2u.com)
SMS_USERNAME=your_1s2u_username
SMS_PASSWORD=your_1s2u_password
SMS_SENDER_ID=SAPT

# Odoo ERP Integration (Optional)
# For localhost setup:
ODOO_HOST=127.0.0.1
ODOO_PORT=8069
ODOO_DATABASE=forapi_17
ODOO_USERNAME=admin
ODOO_PASSWORD=admin

# For remote/ngrok setup (use this instead of HOST/PORT):
# ODOO_URL=https://your-ngrok-url.ngrok.io
# ODOO_DB=forapi_17
# ODOO_USERNAME=admin
# ODOO_PASSWORD=admin

# Odoo Sync Performance Settings
ODOO_BATCH_SIZE=100
ODOO_MAX_RETRIES=3

# Branch-level Stock Aggregation
# Only these Odoo location_id values will be counted when importing/migrating
# stock (comma-separated list). For now we want the main branch only.
BRANCH_LOCATION_IDS=8,34,35,36

# Branch that Odoo should reduce when an order is marked Delivered
DEDUCT_LOCATION_ID=8

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:4100,http://localhost:3000,https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=4194304
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_here

# Development/Production Flags
ENABLE_LOGGING=true
ENABLE_DEBUG=false
ENABLE_SWAGGER=false 